
<%= button_to "Create a viewing party", new_user_movie_viewing_party_path(@user, @movie.id), method: :get %>
<%= button_to "Return to Discover Page", user_discover_index_path(@user), method: :get %>
<%= button_to "Get Similar Movies", user_movie_similar_index_path(@user, @movie.id), method: :get %> 

<h1><%= @movie.title %> Details</h1>

<ul>
   <li>Average Rating: <%= @movie.avg_rating %></li><br>
   <li>Total Reviews: <%= @movie.review_count %></li>
   <li>Runtime: <%= @facade.convert_min_to_hours(@movie.runtime) %></li><br>
   <li>Description: <%= @movie.overview %></li>
   <li>Genre:</li>
   <ul>
      <% @movie.genre.each do |genre| %>
         <li><%= genre[:name] %></li>
      <% end %>
   </ul><br>
   <li>Cast:</li>
   <ul>
      <% @facade.cast_by_movie_id.each do |actor| %>
         <li><%= actor %></li>
      <% end %>
   </ul><br>
   <li>Reviews:</li>
   <ul>
      <% @facade.reviews_by_movie_id.each do |review| %>
         <li>Author: <%= review[0] %><br>Review: <%= review[1] %></li><br>
      <% end %>
   </ul>
</ul>

